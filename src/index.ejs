permalink: index.html
eleventyComputed:
  title: '<%= site.title %>'
---

<% const datumHeute = this.dateFns.format(datum.heute, 'd. MMMM yyyy', { locale: this.locale_de }) %>
<% const datumMorgen = this.dateFns.format(datum.morgen, 'd. MMMM yyyy', { locale: this.locale_de }) %>

<div>
  <h2 class="text-xl font-bold">Heute, <%= datumHeute %></h2>
  <% let abfuhrenHeute = [] %>
  <% kalenderQuery.abfuhrDesAktuellenMonats().forEach(function(abfuhr) { %>
    <% let bezirkeHeute = kalenderQuery.abfuhrbezirkeAbfuhrAnTag(abfuhr, datum.queryTagHeute) %>
    <% if (bezirkeHeute){ %>
      <% let obj = {} %>
      <% obj[abfuhr] = bezirkeHeute %>
      <% abfuhrenHeute.push(obj) %>
    <% } %>
  <% }); %>

  <% if (abfuhrenHeute.length > 0){ %>
    <% abfuhrenHeute.forEach(function (abfuhr) { %>
      <%= Object.keys(abfuhr) %>:<%= Object.values(abfuhr) %>
    <% }) %>
  <% } else { %>
    Keine Abfuhren
  <% } %>
</div>

<div class="mt-2.5">
  <h2 class="text-xl font-bold">Morgen, <%= datumMorgen %></h2>
  <% let abfuhrenMorgen = [] %>
  <% kalenderQuery.abfuhrDesAktuellenMonats().forEach(function(abfuhr) { %>
    <% let bezirkeMorgen = kalenderQuery.abfuhrbezirkeAbfuhrAnTag(abfuhr, datum.queryTagMorgen) %>
    <% if (bezirkeMorgen){ %>
      <% let obj = {} %>
      <% obj[abfuhr] = bezirkeMorgen %>
      <% abfuhrenMorgen.push(obj) %>
    <% } %>
  <% }); %>

  <% if (abfuhrenMorgen.length > 0){ %>
    <% abfuhrenMorgen.forEach(function (abfuhr) { %>
      <%= Object.keys(abfuhr) %>:<%= Object.values(abfuhr) %>
    <% }) %>
  <% } else { %>
    Keine Abfuhren
  <% } %>
</div>
